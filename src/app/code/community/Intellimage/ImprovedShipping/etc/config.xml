<?xml version="1.0"?>
<config>
    <modules>
        <Intellimage_ImprovedShipping>
            <version>1.0.0</version>
        </Intellimage_ImprovedShipping>
    </modules>
    <global>
        <helpers>
            <improvedshipping>
                <class>Intellimage_ImprovedShipping_Helper</class>
            </improvedshipping>
        </helpers>
        <models>
            <improvedshipping>
                <class>Intellimage_ImprovedShipping_Model</class>
            </improvedshipping>
        </models>
    </global>
    <default>
        <carriers>
            <intellimage_improvedshipping>
                <active>0</active>
                <sallowspecific>0</sallowspecific>
                <model>improvedshipping/carrier</model>
                <title>Improved Shipping</title>
                <name>Improved Shipping</name>
                <price>5.00</price>
                <type>O</type>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
                <handling_type>F</handling_type>
            </intellimage_improvedshipping>
        </carriers>
    </default>
</config>